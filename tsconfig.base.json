{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@example/utils": ["utils/src/index.ts"],
      "@interfaces/*": ["utils/src/lib/interfaces/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
